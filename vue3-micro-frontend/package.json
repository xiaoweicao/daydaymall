// package.json - 根目录
{
  "name": "vue3-micro-frontend",
  "version": "1.0.0",
  "description": "Vue3微前端项目",
  "scripts": {
    "dev:main": "cd main-app && npm run dev",
    "dev:auth": "cd auth-app && npm run dev", 
    "dev:business": "cd business-app && npm run dev",
    "dev:settings": "cd settings-app && npm run dev",
    "build:all": "npm run build:main && npm run build:auth && npm run build:business && npm run build:settings",
    "build:main": "cd main-app && npm run build",
    "build:auth": "cd auth-app && npm run build",
    "build:business": "cd business-app && npm run build", 
    "build:settings": "cd settings-app && npm run build",
    "deploy": "./deploy-all-apps.sh"
  },
  "devDependencies": {
    "concurrently": "^7.6.0"
  }
}